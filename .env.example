# ==============================================================================
#  НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ==============================================================================

YII_DEBUG=true
YII_ENV=dev
COOKIE_VALIDATION_KEY=changeme

# ==============================================================================
#  БАЗА ДАННЫХ (MySQL)
# ==============================================================================

DB_HOST=db
DB_PORT=3306

DB_NAME=yii2basic
DB_USER=yii2
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root

# Публичный порт (host:33060 -> container:3306)
DB_PUBLIC_PORT=33060

# ==============================================================================
#  REDIS
# ==============================================================================

REDIS_HOST=redis
REDIS_PORT=6379

# Публичный порт (host:6379 -> container:6379)
REDIS_PUBLIC_PORT=6379

# ==============================================================================
#  BUGGREGATOR (Отладка)
# ==============================================================================

BUGGREGATOR_HOST=buggregator

# Порты сервисов
BUGGREGATOR_UI_PORT=8090   # Web UI
BUGGREGATOR_SMTP_PORT=1025 # Mail catcher
BUGGREGATOR_LOG_PORT=9913  # Logger
BUGGREGATOR_TRAP_PORT=9912 # VarDumper

# Интеграция
MAILER_HOST=buggregator
MAILER_PORT=1025
MAILER_USE_FILE_TRANSPORT=false

BUGGREGATOR_LOG_HOST=buggregator
TRAP_SERVER=buggregator:9912

# ==============================================================================
#  DOCKER ПОРТЫ
# ==============================================================================

APP_PORT=8000
SWAGGER_PORT=8081

# ==============================================================================
